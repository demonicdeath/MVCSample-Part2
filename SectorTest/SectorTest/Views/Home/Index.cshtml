@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript" src="~/assets/js/controller/CustomerSectorController.js"></script>
<script type="text/javascript" src="~/assets/js/services/CustomerTestService.js"></script>
<script type="text/javascript" src="~/assets/js/services/SectorTestService.js"></script>
<style>
    .height-custom{
        height:1000px !important; 
    }
</style>



<div class="container">


    <div ng-controller="CustomerSectorController as customer">
        <div class="row">
            <label>Please enter your name and pick the Sectors you are currently involved in:</label>
        </div>
        <div class="row">
            <div>
                <label>Name<span>*</span></label><br />
                <input type="text" class="form-control" ng-model="customer.CustomerData.CustomerName" required />
            </div>
        </div>
       <div class="form-group">
            <div>
                <label>Sectors<span>*</span></label><br />            
                <select class="height-custom" ng-options="sector.SectorId as sector.Sector for sector in customer.finalSectors"
                        ng-model="customer.CustomerData.SectorId" multiple required></select>
            </div>
        </div>
        <div class="form-check">
            <div>
                <input type="checkbox" id="checkboxAgree" class="form-check" required />
                <label class="form-check">Agree to Terms<span>*</span></label><br />
            </div>
        </div>

        <div class="row">
            <div>
                <button  class="btn btn-primary" ng-click="customer.EditCustomerData()" formnovalidate>Save</button>
                <button  class="btn btn-primary" ng-click="customer.Reset()" formnovalidate>Reset</button>
            </div>
        </div>
    </div>
   </div>